  ghc-options:         -Wall
  exposed-modules:     Iguales_al_siguiente
                     , Ordenados_por_maximo
                     , Bandera_tricolor
                     , ElementosMinimales
                     , Mastermind
  build-depends:       base >= 4.7 && < 5
                     , hspec
                     , QuickCheck >= 2.8.1
  default-language:    Haskell2010

test-suite spec
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  build-depends:       Exercitium1314
                     , base
                     , QuickCheck >= 2.8.1
                     , hspec == 2.*
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  default-language:    Haskell2010
  
source-repository head
  type:     git
  location: https://github.com/jaalonso/Exercitium1314
